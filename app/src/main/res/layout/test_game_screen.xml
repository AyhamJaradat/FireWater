    <LinearLayout
        android:id="@+id/mygameFinishScreenTest"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_weight="1">

        <TextView
            android:id="@+id/gameResultMessageTest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:padding="10dp"
            android:layout_marginBottom="30dp"
            android:text="Game Over"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            style="@style/MainScreenButtonBlurb"
            android:text="Wanna play again ?" />

        <Button
            android:id="@+id/playAgainTest"
            style="@style/MainScreenButton"
            android:text="play again " />

        <Button
            android:id="@+id/goToHomeBtnTest"
            style="@style/MainScreenButton"
            android:text="NooO" />
    </LinearLayout>


