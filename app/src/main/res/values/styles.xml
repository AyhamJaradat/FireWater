<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <color name="AccentColor">#cc0000</color>
    <color name="PopupColor">@color/AccentColor</color>
    <color name="PopupTextColor">#ffffff</color>
    <color name="ButtonTextColor">#ffffff</color>
    <color name="BlurbColor">#a0a0a0</color>
    <color name="SignOutButtonBackground">#e0e0e0</color>
    <color name="SignOutButtonTextColor">#404040</color>
    <color name="OrangeColor">#ff6501</color>

    <color name="FireBackgroundColor">@android:color/holo_orange_dark</color>
    <color name="WaterBackgroundColor">@android:color/holo_blue_light</color>
    <color name="transparent">@android:color/transparent</color>


    <dimen name="TitleSize">30sp</dimen>

    <style name="AppTheme1" parent="android:Theme.Light.NoTitleBar.Fullscreen" />

    <style name="GameScreen">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/background</item>
        <!--<item name="android:visibility">gone</item>-->
    </style>

    <style name="LLScreen" parent="@style/GameScreen">
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">30dp</item>
        <item name="android:layout_margin">0dp</item>

    </style>

    <style name="menuContainer" parent="@style/GameScreen">
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/main_menu</item>
        <!-- <item name="android:paddingTop">40dp</item>
         <item name="android:layout_marginRight">14dp</item>
         <item name="android:layout_marginLeft">14dp</item>
         <item name="android:layout_marginTop">5dp</item>-->
    </style>

    <style name="gameFinishScreenStyle" parent="@style/GameScreen">

        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>


    </style>

    <style name="playerGameScreen" parent="@style/GameScreen">
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">0dp</item>
        <!--<item name="android:background">@android:color/holo_orange_dark</item>-->
    </style>


    <style name="GameplayScreen" parent="@style/LLScreen">
        <item name="android:gravity">center</item>
    </style>

    <!--@color/PopupColor -->
    <style name="InvPopup" parent="@style/LLScreen">
        <item name="android:background">@color/PopupColor</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_gravity">top|right</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="GameTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/game_title</item>
        <item name="android:textColor">@color/AccentColor</item>
        <item name="android:textSize">@dimen/TitleSize</item>
        <item name="android:layout_marginBottom">40dp</item>
    </style>

    <style name="Blurb">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/BlurbColor</item>
    </style>

    <style name="GameBlurb" parent="@style/Blurb">
        <item name="android:text">@string/game_blurb</item>
        <item name="android:layout_marginBottom">40dp</item>
    </style>

    <style name="SignInButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">40dp</item>
    </style>

    <style name="GameButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:textColor">@color/ButtonTextColor</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>


    <style name="MainScreenButton">
        <item name="android:textColor">@color/ButtonTextColor</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/btn_bg1</item>
        <!--<item name="android:layout_marginRight">50dp</item>
        <item name="android:layout_marginLeft">50dp</item>-->
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:textAllCaps">false</item>
    </style>


    <style name="MainScreenButtonBlurb" parent="@style/GameBlurb">
        <item name="android:layout_marginBottom">20dp</item>
    </style>
<!--<item name="android:textColor">@color/PopupTextColor</item>-->
    <style name="InvPopupText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/PopupTextColor</item>
        <item name="android:text">@string/inv_popup_text</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="InvPopupButton" parent="@style/GameButton">
        <item name="android:background">@color/ButtonTextColor</item>
        <item name="android:textColor">@color/AccentColor</item>
    </style>

    <style name="SignOutButton" parent="@style/GameButton">
        <item name="android:background">@color/SignOutButtonBackground</item>
        <item name="android:textColor">@color/SignOutButtonTextColor</item>
    </style>

    <style name="circleMainButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/SignOutButtonBackground</item>
        <item name="android:padding">0dp</item>

    </style>

    <style name="FigureView">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">150dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginBottom">20dp</item>
    </style>

    <style name="FigureLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="ScoreToast">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginBottom">20dp</item>
    </style>

    <style name="ScoresBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">#f0f0f0</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:padding">20dp</item>
    </style>

    <style name="ButtonsBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:padding">20dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ScoreText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:gravity">left</item>
    </style>

    <style name="Instructions" parent="@style/Blurb">
        <item name="android:layout_marginBottom">20dp</item>
    </style>

    <style name="ScoreLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ScoreDisplay">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/AccentColor</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="PlacementDisplay">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/BlurbColor</item>
    </style>

    <style name="SectionLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/AccentColor</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginBottom">20dp</item>
    </style>

</resources>